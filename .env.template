# For local development copy this file to `.env` and set values as needed.
# Production containers receive configuration from Docker Swarm secrets and
# environment variables instead of reading this file directly.

# CSRF Config (all values are required before running locally)
CSRF_KEY=""
CSRF_SECURE=

# Server Config
SERVER_ADDRESS=

# Logging
# LOG_LEVEL accepts debug, info, warn, or error. Defaults to info when unset (Docker images default to warn).
LOG_LEVEL=info
# LOG_FORMAT accepts text or json. Defaults to text when unset.
LOG_FORMAT=text
