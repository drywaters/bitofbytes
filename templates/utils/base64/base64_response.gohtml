{{ if .Error }}
<div class="mt-2 rounded border border-red-300 bg-red-50 p-3 text-red-900" role="alert">
        {{ .Error }}
</div>
{{ end }}
<textarea
        name="str"
        class="mt-4 p-4 bg-white border border-transparent rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-700 focus:border-green-700"
        readonly="true"
        autocomplete="off"
        autofocus="true"
        cols="100"
        maxLength="1024"
        rows="13">{{ .Response }}</textarea>
