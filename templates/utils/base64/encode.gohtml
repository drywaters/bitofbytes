{{ template "header" . }}

<div class="container max-w-4xl mx-auto">
	<div class="flex flex-col">
		<div class="mt-24 lg:mt-52 w-full bg-slate-200">
			<div class="m-8">
				<div class="flex justify-around">
					<span class="text-4xl font-bold">Base64 Encoding</span>
					<input id="btnSubmit" value="SUBMIT" type="submit" form="form" class="bg-cyan-950 text-gray-300 hover:bg-gray-700 rounded-xl font-bold text-l p-2 border-4 border-green-700"></input>
				</div>
                                <form id="form" class="flex flex-col" hx-post="/utils/base64/encode" hx-target="#response">
                                        {{ csrfField }}
                                        <div class="mt-6 flex flex-col">
                                                <label for="encoding" class="text-sm font-semibold uppercase tracking-wide text-green-900">Encoding</label>
                                                <select id="encoding" name="encoding" class="mt-2 rounded-md border border-transparent bg-white p-3 text-gray-800 shadow-sm focus:border-green-700 focus:outline-none focus:ring-2 focus:ring-green-700">
                                                        <option value="standard">Standard (RFC 4648)</option>
                                                        <option value="url">URL safe (RFC 4648 ยง5)</option>
                                                        <option value="raw-standard">Raw standard (no padding)</option>
                                                        <option value="raw-url">Raw URL safe (no padding)</option>
                                                </select>
                                        </div>
                                        <textarea name="str" class="mt-8 p-4 bg-white border border-transparent rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-700 focus:border-green-700" autocomplete="off" autofocus="true" cols="100" maxLength="1024" rows="13"></textarea>
                                </form>
				<div class="mt-4">
					<p class="text-xl">Encoded:</p>
					<div class="flex flex-col" id="response"></div>
				</div>
			</div>
		</div>
	</div>
</div>

{{ template "footer" }}
